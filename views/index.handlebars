<div class="main" BACKGROUND="assets/images/burgersnfries.jpeg" BGCOLOR="#000000" BGPROPERTIES="FIXED">
<h1>Eat Da Burger</h1>
<h2>What kind of Burger would you like to eat?</h2>

<form class="create-update-form" action="/" method="POST">
	<div class="bgrform">
		<input type="text" id="burger_name" name="burger_name">
		<input type="hidden" name="devoured" value="0">
		<button type="submit"> Submit Deliciousness</button>
	</div>
</form>


<ul>
	{{#each burger}}
		{{#unless this.devoured}}
		<li>
        {{this.burger_name}}
		<h3>Dare to eat it?</h3>
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="0">
          <button type="submit">Devour it!</button>
        </form>
      </li>
      {{/unless}}
	{{/each}}
</ul>



<ul>
	{{#each burger}}
		{{#if this.devoured}}
		<li>
        {{this.burger_name}}
		 
		<h3>No Regrets! Devoured!</h3>
        
        <form action="/{{this.id}}?_method=PUT" method="POST">
          	<input type="hidden" name="devoured" value="1">
        </form>
      	</li>
      {{/if}}
	{{/each}}
</ul>

</div>